#include<stdio.h>
#include<stdlib.h>
#include<string.h>
void calculator(int A,int B,int C) {
	if (A == B&&A==C) {
		int result = 10000 + (A * 1000);
		printf("%d",result);
		return;
	}
	else if (A == B||A==C||B==C) {
		if (A == B) {
			printf("%d", 1000 + A * 100);
		}
		else if (A == C) {
			printf("%d", 1000 + A * 100);
		}
		else if(B == C) {
			printf("%d", 1000 + B * 100);
		}
	}
	else  {
		if (A > B && A > C) {
			printf("%d", A * 100);
		}
		else if (B > A && B > C) {
			printf("%d", B * 100);
		}
		else if (C > A && C > A) {
			printf("%d", C * 100);
		}

	}


}
int main() {
	int A, B, C;
	scanf("%d %d %d",&A,&B,&C);
	calculator(A, B, C);

	return 0;
}
